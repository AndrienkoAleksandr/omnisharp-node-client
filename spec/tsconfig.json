{
    "externalTranspiler": {
        "name": "babel",
        "options": {
            "presets": [
                [
                    "es2015",
                    "stage-3"
                ]
            ],
            "plugins": [
                "transform-es2015-modules-commonjs"
            ]
        }
    },
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true
    },
    "compileOnSave": true,
    "filesGlob": [
        "./**/*.ts",
        "!./**/*.d.ts",
        "../lib/**/*.ts",
        "!../lib/**/*.d.ts",
        "./tsd.d.ts"
    ],
    "files": [
        "./candidate-find-spec.ts",
        "./omnisharp-client-commands-v2.ts",
        "./omnisharp-client-commands.ts",
        "./omnisharp-client-spec.ts",
        "./stdio-spec.ts",
        "./validate-proxies-spec.ts",
        "../lib/aggregate/composite-client-base.ts",
        "../lib/aggregate/composite-client-v1.ts",
        "../lib/aggregate/composite-client-v2.ts",
        "../lib/candidate-finder.ts",
        "../lib/clients/client-base.ts",
        "../lib/clients/client-v1.ts",
        "../lib/clients/client-v2.ts",
        "../lib/contexts.ts",
        "../lib/decorators.ts",
        "../lib/drivers/http.ts",
        "../lib/drivers/stdio.ts",
        "../lib/drivers/websocket.ts",
        "../lib/enums.ts",
        "../lib/helpers/Disposable.ts",
        "../lib/helpers/fromCallback.ts",
        "../lib/helpers/pausableBuffered.ts",
        "../lib/helpers/plugin-manager.ts",
        "../lib/helpers/prioritization.ts",
        "../lib/omnisharp-client.ts",
        "../lib/omnisharp-path.ts",
        "../lib/options.ts",
        "../lib/queue.ts",
        "../lib/response-handling.ts",
        "../lib/stdio/child.ts",
        "./tsd.d.ts"
    ]
}
