{
    "externalTranspiler": "babel",
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "experimentalAsyncFunctions": true
    },
    "compileOnSave": true,
    "filesGlob": [
        "./**/*.ts",
        "!./*/**/*.d.ts",
        "!./omnisharp-client.d.ts",
        "!./omnisharp-server.d.ts",
        "!./typings/**/*.d.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./lib/aggregate/composite-client-base.ts",
        "./lib/aggregate/composite-client-v1.ts",
        "./lib/aggregate/composite-client-v2.ts",
        "./lib/candidate-finder.ts",
        "./lib/clients/client-base.ts",
        "./lib/clients/client-v1.ts",
        "./lib/clients/client-v2.ts",
        "./lib/contexts.ts",
        "./lib/decorators.ts",
        "./lib/drivers/http.ts",
        "./lib/drivers/stdio.ts",
        "./lib/drivers/websocket.ts",
        "./lib/enums.ts",
        "./lib/helpers/plugin-manager.ts",
        "./lib/helpers/prioritization.ts",
        "./lib/omnisharp-client.ts",
        "./lib/omnisharp-path.ts",
        "./lib/options.ts",
        "./lib/project-finder.ts",
        "./lib/queue.ts",
        "./lib/response-handling.ts",
        "./lib/stdio/child.ts",
        "./spec/candidate-find-spec.ts",
        "./spec/omnisharp-client-commands-v2.ts",
        "./spec/omnisharp-client-commands.ts",
        "./spec/omnisharp-client-spec.ts",
        "./spec/project-find-spec.ts",
        "./spec/stdio-spec.ts",
        "./spec/validate-proxies-spec.ts",
        "./tsd.d.ts"
    ],
    "exclude": [],
    "atom": {
        "rewriteTsconfig": true
    }
}
